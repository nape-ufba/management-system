<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Course</th>
        <th>Type</th>
        <th>Role</th>
        <th>Special need</th>
        <th>Phone</th>
        <th>Document number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.course_id %></td>
          <td><%= user.user_type_id %></td>
          <td><%= user.role_id %></td>
          <td><%= user.special_need_id %></td>
          <td><%= user.phone %></td>
          <td><%= user.document_number %></td>
          <td><%= link_to 'Show', admin_users_path %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td><%= link_to 'Destroy', admin_users_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

