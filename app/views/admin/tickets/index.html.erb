<p id="notice"><%= notice %></p>

<h2 class="sub-header">Demandas</h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Título</th>
        <th>Usuário</th>
        <th>Status</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.id %></td>
          <td><%= ticket.title %></td>
          <td><%= ticket.user.name %></td>
          <td><%= ticket.status %></td>
          <td><%= link_to 'Ver', admin_ticket_path(ticket) %></td>
          <td><%= link_to 'Apagar', admin_tickets_path, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
