<div class="ticket-full">
  <h2>Ticket: <%= @ticket.title %></h2>
  <div class="ticket-full-details">
    <b>Status</b>: <span class="label label-primary">Aberto</span>
    <br/>
    <b>Criado em:</b/> 15/02/17 Ã s 17:58
  </div>

  <div class="ticket-full-message">
    <b>Mensagem:</b>
    <br/>
    <%= @ticket.message %>
  </div>

  <div class="ticket-full-conversation">
    <h3>Conversa:</h3>

    <% @ticket.ticket_messages.each do |ticket_message| %>
      <div class="ticker-full-message">
        <div class="ticker-full-message-head">
          <div class="ticker-full-message-head-user"><span>Cargo</span>: <%= ticket_message.user.name %></div>
          <div class="ticker-full-message-head-date">Enviado em: <%= ticket_message.created_at %></div>
        </div>
        <div class="ticker-full-message-body">
          <%= ticket_message.message %>
        </div>
      </div>
    <% end %>

    <div class="ticket-full-form">
      <h3>Adicionar mensagem:</h3>
      <%= form_for([:admin, @ticket, @ticket.ticket_messages.build]) do |f| %>
        
        <div class="form-group">
          <%= f.label :message, 'Mensagem' %><br />
          <%= f.text_area :message, :class => 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit 'Enviar mensagem', :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
